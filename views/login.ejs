<div id="login-box">
    <h3>
        <i class="icon icon-login"></i>
        <span>登录爱去帐号</span>
        <span>X</span>
    </h3>
    <p>
        <i class="icon icon-phone"></i>
        <span>短信快捷登录</span>
    </p>
    <form>
        <p class="username-wrapper">
            <label for="userName" class="icon icon-user
"></label>
            <input id="userName" type="text" placeholder="手机/邮箱/用户名">
        </p>
        <p class="password-wrapper">
            <label for="password" class="icon icon-pwd"></label>
            <input id="password" type="text" placeholder="密码">
        </p>
        <input type="button" value="登录">
    </form>
    <p id="login-footer">
        <span>可以使用以下方式登录</span>
        <br>
        <i class="icon icon-qq"></i>
        <i class="icon icon-weibo"></i>
        <i class="icon icon-weixin"></i>
    </p>
</div>