<div id="wrapper">
    <div class="content clearfix">
        <% for(var i = 0; i < categories.length; i++){ %>
        <div class="column" title="<%= categories[i].name %>">
            <dl>
                <dt>
                    <span><%= categories[i].name %></span>
                    <a href="<%= categories[i].url %>">more&raquo;</a>
                </dt>
                <% for(var j = 0; j < categories[i].list.length; j++){ %>
                <dd>
                    <a href="<%= categories[i].list[j].url %>">
                        <%if(categories[i].list[j].hot){%><i class="<%= categories[i].list[j].hot %>"><%= categories[i].list[j].name %></i>
                        <%}else{%><i><%= categories[i].list[j].name %></i><%}%>
                        <span class="fr"><%= categories[i].list[j].meta %></span>
                    </a>
                </dd>
                <% } %>
            </dl>
        </div>
        <% } %>
    </div>
</div>